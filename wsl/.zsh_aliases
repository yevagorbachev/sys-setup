function clean-sub { # make clean for immediate subdirectories
	for dir in */; do
		make -C $dir clean
	done
}

function plotcrop { # crop in-place with no margin
	pdfcrop -margin 0 $1 $1
}

function plotcrop-all { # plotcrop all .pdf in cwd
	for file in *.pdf; do
		plotcrop $file
	done
}

function project-make {
	dst=.
	while getopts s:d:n: flag
	do
		case "${flag}" in
			s) src=${OPTARG};;
			d) dst=${OPTARG};;
			n) name=${OPTARG};;
		esac
	done
	if [[ -z $src ]]; then
		echo "Source option -s required"
		return 1
	fi
	if [[ -z $name ]]; then
		echo "Name option -n required"
		return 2
	fi

	# if [ ! -d $dst ] && [ $(_confirm "Create new $dst") ]; then
	# 	mkdir -p "$dst" -v
	# fi

	echo "Copying files..."
	cp $src/* $dst -r -v
	if [[ -e $src/$PSETUP ]]; then
		echo "Setup dotfle found"
		cp $src/$PSETUP $dst -v
	fi
	cd $dst
		
	if [[ -e $PSETUP ]]; then
		chmod +x $PSETUP
		./$PSETUP $name
		rm $PSETUP
	else
		echo "No setup dotfile to run"
	fi
	unset -v src # not really sure why I need to do this :((
	unset -v name # not really sure why I need to do this :((
	unset -v dst # not really sure why I need to do this :((
}

function maketex { # create tex project named $1
	cp ~/wsl-setup/auxiliary-files/maketex/* .
	mv texfile.tex $1'.tex'
	sed 's/{name}/'$1'/g' makefile -i
}


function project-set {
	ln -s -f "$(pwd)" $PROJECTS/$1
}

function project {
	cd -P $PROJECTS/$1
}

function project-list {
	ls -l $PROJECTS | sed -E 's/^.*[0-9]{2}:[0-9]{2} //g'
}

function project-rm {
	rm $PROJECTS/$1
}

function flatten-pdf {
	tf=$(mktemp)
	target=${2:-$1}
	echo "Writing output to $tf..."
	gs -sDEVICE=pdfwrite -dPDFSETTINGS=/default -dPreserveAnnots=false \
		-dNOPAUSE -dQUIET -dBATCH -sOutputFile=$tf $1
	echo "Done"
	mv $tf $target
	echo "Moved output to $target"
}
